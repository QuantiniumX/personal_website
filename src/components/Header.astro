---
import HeaderLink from './HeaderLink.astro';
const { pathname }  = Astro.url;
---

<header class="flex justify-around mt-5 border-b border-white pb-3">
	<img src="/dandadan.avif" class="rounded-full w-10 mr-5 hidden lg:block">
	<nav class="flex flex-row w-full gap-5 flex-wrap text-xl items-center">
		<HeaderLink href="/" class=`${pathname === '/' ? 'text-[#d79921]': ''}`>Home</HeaderLink>
		<HeaderLink href="/blog" class=`${pathname.startsWith('/blog') ? 'text-[#d79921]' : ''}`>Blog</HeaderLink>
		<HeaderLink href="/weekly" class=`${pathname.startsWith('/weekly') ? 'text-[#d79921]' : ''}`>Weekly-Report</HeaderLink>
		<HeaderLink href="/notes" class=`${pathname.startsWith('/notes') ? 'text-[#d79921]' : ''}`>Notes</HeaderLink>
		<HeaderLink href="/resource" class=`${pathname.startsWith('/resource') ? 'text-[#d79921]' : ''}`>Resource</HeaderLink>
		<HeaderLink href="/about" class=`${pathname.startsWith('/about') ? 'text-[#d79921]' : ''}`>About</HeaderLink>
	</nav>
</header>
